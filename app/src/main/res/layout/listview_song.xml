<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listview_hor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/listview_vert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/songlistview_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_bold"
            android:text="SongName"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/songlistview_type"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:fontFamily="@font/product_sans_regular"
            android:text="Type"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/songlistview_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_regular"
            android:text="tag1, tag2, tag3, tag4"
            android:textSize="14sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/songlistview_image"
        android:layout_width="146dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        app:srcCompat="@mipmap/ic_launcher_round" />
</LinearLayout>